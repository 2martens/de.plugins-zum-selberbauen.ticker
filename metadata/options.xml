<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/options.xsd">
    <import>
        <categories>
            <category name="general.scrollText">
                <parent>general</parent>
                <options>module_scrollText</options>
            </category>
        </categories>
        <options>
            <!-- module -->
            <option name="module_scrollText">
                <categoryname>module.content</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>1</defaultvalue>                
            </option>
            <!-- /module -->
            <!-- options -->
            <option name="general_scrollText_showTime">
                <categoryname>general.scrollText</categoryname>
                <optiontype>integer</optiontype>
                <defaultvalue>5</defaultvalue>
                <validationpattern>^\d?[1-9]$</validationpattern>
            </option>
            <!-- /options -->
        </options>
    </import>
</data>